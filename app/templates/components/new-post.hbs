{{#if addNewPost}}
  <h1>New Post</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="owner">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="type">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="city">Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'savePost'}} class='btn btn-warning'>Save</button>
      <button {{action 'hideForm'}} class='btn btn-warning'>Cancel</button>
    </form>
  </div>
{{else}}
  <button {{action 'postFormShow'}}  class='btn btn-success'>New post</button>
{{/if}}
